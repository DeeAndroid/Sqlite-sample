<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Fragments.RoomBookingFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cardcontest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical">

<FrameLayout
    android:id="@+id/selectdatecard"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/purple_200"
        >
        <com.airbnb.lottie.LottieAnimationView

            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:lottie_autoPlay="true"
            android:layout_marginStart="20dp"
            app:lottie_loop="true"
            android:padding="8dp"
            android:elevation="10dp"
            app:lottie_rawRes="@raw/calender" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/selectdate"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:maxLength="20"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/purple_200"
            android:background="@color/purple_200"
            android:singleLine="true"
        android:gravity="center"
        android:layout_gravity="center_vertical|end"
            android:inputType="number"
            android:elevation="10dp"
            android:textSize="13sp"
            android:text="Select Date"
            android:textColor="@color/white" />



</FrameLayout>
        <LinearLayout
            android:id="@+id/bookinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="3">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/productimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/hotelroom" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/product_name_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="9"
                        
                        android:gravity="start"
                        android:padding="5dp"
                        android:text="Happievile Beach Resort"
                        android:textColor="@color/textcolordark"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/vegnveg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        android:padding="7dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/product_desc_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="Beatch Resort"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".5"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:text="Available"
                        android:textColor="@color/textcolordark"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/availablerooms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        
                        android:gravity="start"
                        android:paddingStart="5dp"
                        android:text="10/10"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/addbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_boder"
                            android:backgroundTint="@color/purple_200"
                            
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:text="Add"
                            android:textColor="@color/white"
                            android:visibility="visible" />


                        <LinearLayout
                            android:id="@+id/layio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/minus"
                                    app:tint="@color/purple_200" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/quantity"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="0"
                                android:textColor="@color/purple_200"
                                android:textStyle="bold" />


                            <androidx.cardview.widget.CardView
                                android:id="@+id/plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/add"
                                    app:tint="@color/purple_200" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#eaeaea" />
</LinearLayout>

    <Button
        android:id="@+id/booknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_boder"
        android:backgroundTint="@color/purple_200"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="Book Now"
        android:textColor="@color/white"
        android:visibility="visible" />
</LinearLayout>